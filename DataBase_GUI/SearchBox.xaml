<Window x:Class="DataBase_GUI.SearchBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_GUI"
        mc:Ignorable="d"
        Title="Поиск" Height="250" Width="360" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="SearchedValue" 
            
            HorizontalAlignment="Left" 
            Height="22" Width="120"
            Margin="197,56,0,0"
            VerticalAlignment="Top"/>
        <ComboBox 
            x:Name="SearchedElement"
            HorizontalAlignment="Left" 
            Margin="33,56,0,0" 
            VerticalAlignment="Top"
            Width="135" Height="22" SelectionChanged="SearchedElement_SelectionChanged"/>
        <Button
            x:Name="FindButton" 
            Content="Найти" 
            HorizontalAlignment="Left"
            Margin="197,107,0,0"
            VerticalAlignment="Top" 
            Width="120" Height="44" 
            Click="FindButton_Click"/>
    </Grid>
</Window>
